{
  "name": "d2l-date-picker",
  "description": "Polymer-based web component for D2L date picker",
  "private": true,
  "main": "d2l-date-picker.html",
  "scripts": {
    "postinstall": "polymer install --variants",
    "lint": "npm run lint:wc && npm run lint:html",
    "lint:html": "eslint *.html demo/*.html test/*.html",
    "lint:wc": "polymer lint -i d2l-date-picker.html",
    "test": "npm run lint && polymer test --skip-plugin sauce"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BrightspaceUI/date-picker.git"
  },
  "keywords": [
    "D2L",
    "date",
    "picker"
  ],
  "author": "D2L Corporation",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/BrightspaceUI/date-picker/issues"
  },
  "homepage": "https://github.com/BrightspaceUI/date-picker#readme",
  "devDependencies": {
    "eslint": "^4.15.0",
    "eslint-config-brightspace": "^0.4.0",
    "eslint-plugin-html": "^4.0.1",
    "polymer-cli": "^1.5.7"
  }
}
